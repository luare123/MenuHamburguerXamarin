<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_MenuHamburguer.Views.login"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Frame CornerRadius="10" x:Name="frm_login" Margin="20"
                   VerticalOptions="CenterAndExpand">
                <StackLayout>
                    <Label Text="LOGIN"
                           FontSize="Title"
                           HorizontalTextAlignment="Center"/>
                    <Label/>
                    <Label Text="Email:" HorizontalTextAlignment="Center"/>
                    <Entry x:Name="txt_email" Placeholder="usuario@gmail"/>
                    <Label Text="Senha:" HorizontalTextAlignment="Center"/>
                    <Entry x:Name="txt_senha" IsPassword="True" Placeholder="123"/>
                    <Label/>
                    <Button Text="Entrar" Clicked="Button_Clicked"/>
                </StackLayout>

            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>